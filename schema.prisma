generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum OrderStatus {
  PENDING
  SENT
  CONFIRMED
  CANCELLED
}

model Order {
  id             String      @id @default(cuid())
  customerName   String
  customerPhone  String       @db.VarChar(20)
  deliveryOption String
  address        String?
  notes          String?
  total          Float
  status         OrderStatus @default(PENDING)
  createdAt      DateTime    @default(now())

  items          OrderItem[]

  @@index([createdAt])
  @@index([status])
}

model OrderItem {
  id        String   @id @default(cuid())
  productId String
  label     String
  price     Float
  quantity  Int

  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  orderId   String
}